<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input is-medium' %>
    </div>
  </div>

   <div class="field">
    <%= f.label :password %><br />
    <div class="control">
      <%= f.password_field :password, autofocus: true, autocomplete: "password", class:'input is-medium' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, '勿忘我' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "登入", class: "button is-primary" %>
    <hr/>
  </div>
<% end %>

<%= render "devise/shared/links" %>
